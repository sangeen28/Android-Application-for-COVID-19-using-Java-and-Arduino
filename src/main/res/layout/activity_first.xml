<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/first_1"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".FirstActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"

        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"

        >


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
          android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
           android:layout_marginBottom="70dp"
            android:columnCount="6"
            android:rowCount="6"

            >

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_marginTop="8dp"
                android:layout_column="0"
                android:drawableTop="@drawable/about_covid"
                android:id="@+id/about_covid"
                android:background="@drawable/button_first"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="About COVID" />


            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="40dp"
                android:drawableTop="@drawable/covid_precaution"
                android:background="@drawable/button_first"

                android:id="@+id/covid_precautions"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                android:text="Precautions" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="2"
                android:paddingTop="10dp"


                android:id="@+id/covid_symptoms"
                android:layout_marginLeft="40dp"
                android:drawableTop="@drawable/covid_symptoms"
                android:background="@drawable/button_first"

                android:text="COVID Symptoms" />


            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                android:id="@+id/covid_meter"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_first"
                android:drawableTop="@drawable/covid_meter"
                android:text="COVID Meter" />


            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:drawableTop="@drawable/developers"
                android:layout_column="0"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                android:id="@+id/developers"
                android:background="@drawable/button_first"

                android:layout_marginTop="43dp"
                android:text="Developers" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                android:background="@drawable/button_first"

                android:id="@+id/login"
                android:layout_marginLeft="40dp"
                android:drawableTop="@drawable/login"
                android:layout_marginTop="45dp"
                android:text="LogIn" />


        </GridLayout>





    </androidx.cardview.widget.CardView>



</RelativeLayout>